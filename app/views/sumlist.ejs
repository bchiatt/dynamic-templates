<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Sum List</title>
    <link rel="stylesheet" href="/css/style2.css">
  </head>
  <body>
    <h1>Sum List</h1>
    <table>
      <% for(var i = 0; i < list.length; i++) { %>
        <% var color = (list[i]%2) ? odd : even %>
        <tr>
          <td style="color:<%= color %>;">
            <%= list[i] %>
          </td>
        </tr>
      <% } %>
        <tr>
          <td><%= sum %></td>
        </tr>
    </table>
  </body>
</html>
