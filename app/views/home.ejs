<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Dynamic Templates</title>
    <link rel="stylesheet" href="css/style.css">
  </head>
  <body>
    <h1 style="color:red;background-color:yellow;">Welcome to Dynamic Templates</h1>

    <h2>Multiply 3 * 3 = <%= 3*3 %></h2>
    <h2>A random number between 3 and 12: <%= Math.floor(Math.random() * 10) + 3 %></h2>

    <% var a = 3, b = 2 %>
    <p><%= a + b %></p>

    <% if(a===3) {  %>
      <p>a is 3</p>
    <% }else{ %>
      <p>a not 3</p>
    <% } %>

    <% var colors = ['blue', 'green', 'yellow', 'orange', 'purple', 'black'] %>
    <% for(var i = 0; i < colors.length; i++) { %>
    <% var back = i+1===colors.length ? colors[0] : colors[i+1] %>
    <% if(i % 3 === 0){var font = 'monofett', cursive}else if(i % 3 === 1){var font = 'Shadows Into Light', cursive}else{var font = 'Poiret One', cursive} %>
    <p style="color:<%= colors[i] %>; font-size:<%= 12 + (i*2) %>px; background-color:<%= back %>; font-family:<%= font %>"><%= colors[i] %></p>
    <% } %>
  </body>
</html>
